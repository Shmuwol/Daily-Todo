<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />

  <title>DailyTodo</title>

  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <link rel="stylesheet" href="/stylesheets/main.css" />
</head>
<body>
  <div class="wrapper">

    <% if flash.has?(:notice) %>
      <h3 class="notice" style="color :red; "><%= flash[:notice] %></h3>
    <% end %>

      <%= yield %>

    <footer class="branding">
      <small>&copy; <%= Date.current.year %> <strong>DailyTodo</strong></small>
      <% if current_user %>
        <small> - logged in  as <strong><%=current_user.username  %></strong></small>
        <small> | <a href="/logout">logout</a></small>

      <% end %>
    </footer>
  </div>

  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
